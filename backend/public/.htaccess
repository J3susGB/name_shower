RewriteEngine On

# 1) Si el archivo o carpeta existe, servirlo tal cual
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# 2) Fallback para Angular bajo /landing/** -> servir landing/index.html
#    (solo si no existe archivo/carpeta real)
RewriteCond %{REQUEST_URI} ^/landing($|/.*)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ landing/index.html [L]

# 3) Todo lo dem√°s que lo maneje Symfony
RewriteRule ^ index.php [QSA,L]
